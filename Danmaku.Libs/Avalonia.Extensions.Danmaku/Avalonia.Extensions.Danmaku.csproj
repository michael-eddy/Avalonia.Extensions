<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
	  <Version>1.0.0</Version>
	  <Authors>michael_eddy</Authors>
	  <LangVersion>latest</LangVersion>
	  <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
	  <BaseOutputPath>..\OutDebug\</BaseOutputPath>
	  <TargetFramework>netstandard2.1</TargetFramework>
	  <RootNamespace>Avalonia.Extensions</RootNamespace>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageProjectUrl>https://github.com/michael-eddy/Avalonia.Extensions</PackageProjectUrl>
  </PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Avalonia" Version="0.10.18" />
		<PackageReference Include="MonoMac.NetStandard" Version="0.0.4" />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\..\Avalonia.Extensions.Controls\Avalonia.Extensions.Controls.csproj" />
	  <ProjectReference Include="..\Danmaku.Windows\Danmaku.Windows.csproj" />
	</ItemGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
	  <Exec Command="xcopy $(OutDir)\*.dll ..\OutDebug /f /y /i" />
	</Target>
</Project>