<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Version>1.5.2</Version>
        <Authors>michael_eddy</Authors>
        <LangVersion>latest</LangVersion>
        <Product>Avalonia.Extensions.Controls</Product>
        <RootNamespace>Avalonia.Extensions</RootNamespace>
        <TargetFramework>netstandard2.1</TargetFramework>
        <EnforceCodeStyleInBuild>false</EnforceCodeStyleInBuild>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <UserSecretsId>214483ab-ede2-45c7-ac37-b353540601d8</UserSecretsId>
        <PackageProjectUrl>https://github.com/michael-eddy/Avalonia.Extensions</PackageProjectUrl>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <DocumentationFile />
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>
    <ItemGroup>
        <None Remove="Assets\Fonts\SegMDL2.ttf" />
        <None Remove="Styles\Xaml\CheckBoxList.xml" />
        <None Remove="Styles\Xaml\GridView.xml" />
        <None Remove="Styles\Xaml\RadioButtonList.xml" />
        <None Remove="Styles\Xaml\readme.txt" />
        <AvaloniaResource Include="Styles\Xaml\*.xml" />
        <AvaloniaResource Remove="Styles\Xaml\CheckBoxList.xml" />
        <AvaloniaResource Remove="Styles\Xaml\RadioButtonList.xml" />
        <None Include="..\.editorconfig" Link=".editorconfig" />
        <AvaloniaResource Include="Assets\Fonts\SegMDL2.ttf" />
    </ItemGroup>
    <ItemGroup>
      <EmbeddedResource Include="Styles\Xaml\CheckBoxList.xml">
        <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
      </EmbeddedResource>
      <EmbeddedResource Include="Styles\Xaml\RadioButtonList.xml">
        <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
      </EmbeddedResource>
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Avalonia" Version="0.10.10" />
        <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
        <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
        <PackageReference Include="Avalonia.Markup.Xaml.Loader" Version="0.10.10" />
    </ItemGroup>
</Project>